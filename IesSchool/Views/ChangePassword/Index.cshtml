</html>



<script type="text/javascript">
    

    function SavePassword () {


          $.ajax({
               type: "POST",
                url: "http://localhost:5212/api/ChangePassword/ResetUserPassword",
                data: { Id:50, NewPassword: $('#newPassword').val(), ConfirmPassword:  $('#confirmPassword').val() },
                dataType: "json",
                success: function (res) { //call successfull
                    console.log(res)
                },
                error: function (xhr) {
                }
            });
    }

</script>