<body>

        <form id="frm" enctype="multipart/form-data">

             <div class="form-group row">
                <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-9">
                    <input type="password"  data-val="true" data-valmsg-replace="true" id="txtPassword"  class="form-control" placeholder="" data-val-required="Password is Required" required>
                   
                </div>
            </div><br>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-3 col-form-label">Re-Enter Password</label>
                <div class="col-sm-9">
                    <input type="password" data-val="true" data-valmsg-replace="true" id="txtConfirmPassword"  class="form-control" placeholder="" data-val-required="Confirm Password is Required" required>
                   
                    <span class="field-validation-error_2" style="color:red;"></span>
                </div>
            </div><br>
            <div class="row">
                <div class="col-xs-12">
                    <span class="field-validation-error" style="color:red;display:block;margin-bottom:10px;"></span>
                </div>
            </div>
            <div>
                <label id="lblResetPasswordResults" style="color:red">

                </label>
            </div>




    <input type="text" name="newPassword" id="newPassword" />
    <input type="text" name="confirmPassword" id="confirmPassword" />

    <input type="button" value="Save" onclick="SavePassword()" />
    <br />
    <p>Using TempData: @TempData.ContainsKey("msg")TempData["msg"].ToString() </p> 
            @*<label id="msg"  class="col-sm-3 col-form-label">@(TempData["msg"])</label>*@

    @*@if (ViewBag.Msg!= null)
